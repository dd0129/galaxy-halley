    <root>
        <priority value="debug"/>
        <appender-ref ref="filelog"/>
        <appender-ref ref="output"/>
        <appender-ref ref="errorfile"/>
        <appender-ref ref="ConsoleAppender"/>
        <appender-ref ref="filelog" />
    </root>
</log4j:configuration>
